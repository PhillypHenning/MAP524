<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.map.pahenning_folz.lab_3">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- The presence of the elements below tells the OS there is multiple activities. -->
        <activity android:name=".SecondActivity">
            <!-- XML tags included within describe the second activity. -->
            <!-- Intent-filters are used to receieve and handle intents. -->
            <intent-filter>
                <!-- Every intent needs an action and a category. -->
                <action android:name='com.seneca.lab2.Phil'/>
                <!-- for custom intents the category is always default -->
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ThirdActivity"></activity>
    </application>

</manifest>